@page
@model multiple_tables.Pages.ProductMaster.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Products</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Products.Name" class="control-label"></label>
                <input asp-for="Products.Name" class="form-control" />
                <span asp-validation-for="Products.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Products.UnitPrice" class="control-label"></label>
                <input asp-for="Products.UnitPrice" class="form-control" />
                <span asp-validation-for="Products.UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Products.CategoryId" class="control-label"></label>
                <select asp-for="Products.CategoryId" class ="form-control" asp-items="ViewBag.CategoryId">
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="Products.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Products.Description" class="control-label"></label>
                <input asp-for="Products.Description" class="form-control" />
                <span asp-validation-for="Products.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Products.UnitsInStock" class="control-label"></label>
                <input asp-for="Products.UnitsInStock" class="form-control" />
                <span asp-validation-for="Products.UnitsInStock" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Products.Discontinued" /> @Html.DisplayNameFor(model => model.Products.Discontinued)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Products.ImageData" class="control-label"></label>
                <!-- Change the input type to file -->
                <input type="file" asp-for="ImageFile" class="form-control" accept="image/jpeg" />
                <span asp-validation-for="Products.ImageData" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Products.ImageData2" class="control-label"></label>
                <!-- Change the input type to file -->
                <input type="file" asp-for="ImageFile2" class="form-control" accept="image/jpeg" />
                <span asp-validation-for="Products.ImageData2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

